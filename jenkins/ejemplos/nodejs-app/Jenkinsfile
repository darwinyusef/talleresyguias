// Jenkinsfile para aplicaci√≥n Node.js
// Pipeline completo de CI/CD

pipeline {
    agent any
    
    environment {
        APP_NAME = 'nodejs-app'
        DOCKER_IMAGE = "usuario/${APP_NAME}"
        DOCKER_TAG = "${BUILD_NUMBER}"
        NODE_VERSION = '18'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'üì• Clonando repositorio...'
                checkout scm
            }
        }
        
        stage('Install Dependencies') {
            agent {
                docker {
                    image "node:${NODE_VERSION}-alpine"
                    args '-u root'
                }
            }
            steps {
                echo 'üì¶ Instalando dependencias...'
                sh 'npm ci'
            }
        }
        
        stage('Lint') {
            agent {
                docker {
                    image "node:${NODE_VERSION}-alpine"
                    args '-u root'
                }
            }
            steps {
                echo 'üîç Ejecutando linter...'
                sh 'npm run lint || true'
            }
        }
        
        stage('Test') {
            agent {
                docker {
                    image "node:${NODE_VERSION}-alpine"
                    args '-u root'
                }
            }
            steps {
                echo 'üß™ Ejecutando tests...'
                sh 'npm test'
            }
            post {
                always {
                    junit '**/test-results/*.xml' allowEmptyResults: true
                    publishHTML([
                        reportDir: 'coverage',
                        reportFiles: 'index.html',
                        reportName: 'Coverage Report'
                    ]) allowMissing: true
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                echo 'üê≥ Construyendo imagen Docker...'
                script {
                    dockerImage = docker.build("${DOCKER_IMAGE}:${DOCKER_TAG}")
                }
            }
        }
        
        stage('Test Docker Image') {
            steps {
                echo 'üß™ Probando imagen Docker...'
                sh """
                    docker run -d --name test-${BUILD_NUMBER} -p 3001:3000 ${DOCKER_IMAGE}:${DOCKER_TAG}
                    sleep 5
                    curl -f http://localhost:3001/health || exit 1
                    docker stop test-${BUILD_NUMBER}
                    docker rm test-${BUILD_NUMBER}
                """
            }
        }
        
        stage('Push to Registry') {
            when {
                branch 'main'
            }
            steps {
                echo 'üì§ Publicando imagen...'
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'dockerhub-credentials') {
                        dockerImage.push("${DOCKER_TAG}")
                        dockerImage.push('latest')
                    }
                }
            }
        }
        
        stage('Deploy') {
            when {
                branch 'main'
            }
            steps {
                echo 'üöÄ Desplegando aplicaci√≥n...'
                sh """
                    docker stop ${APP_NAME} || true
                    docker rm ${APP_NAME} || true
                    docker run -d \
                        --name ${APP_NAME} \
                        -p 3000:3000 \
                        --restart unless-stopped \
                        ${DOCKER_IMAGE}:${DOCKER_TAG}
                """
            }
        }
    }
    
    post {
        always {
            sh 'docker image prune -f'
        }
        success {
            echo '‚úÖ Pipeline completado exitosamente!'
        }
        failure {
            echo '‚ùå Pipeline fall√≥!'
        }
    }
}
